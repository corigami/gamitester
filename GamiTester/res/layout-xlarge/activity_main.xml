<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityMainLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<TextView
    android:id="@+id/homeScreenTextView1"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:focusable="false"
    android:text="@string/homeScreenText1"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buttonExamViewPrevious"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/homeScreenReviewButton" 
        android:onClick="addExamOnClick"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/homeScreenExamButton"
        android:onClick="examButtonOnClick" />
    
    <Button
    	android:id="@+id/button3"
  	 	android:layout_width="match_parent"
 	   android:layout_height="70dp"
 	   android:text="@string/homeScreenEditButton"
 	   android:onClick="editButtonOnClick" />
    <Button
	    android:id="@+id/button4"
	    android:layout_width="match_parent"
	    android:layout_height="70dp"
	    android:onClick="questionButtonOnClick"
	    android:text="@string/homeScreenQuestionButton" />
    
</LinearLayout>
</LinearLayout>